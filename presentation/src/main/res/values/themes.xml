<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Schedule" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="1">@android:color/transparent</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:colorBackground">@color/bg_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="bottomNavigationStyle">@style/BNViewStyle</item>
        <item name="progressBarStyle">@style/ProgressBarStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="buttonBarButtonStyle">@style/ButtonStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="android:fontFamily">@font/font_rubik_family</item>
        <item name="materialTimePickerTheme">@style/MaterialTimePickerTheme</item>
        <item name="materialTimePickerStyle">@style/MaterialTimePickerTheme</item>
        <item name="floatingActionButtonStyle">@style/FabStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFabStyle</item>
    </style>
</resources>